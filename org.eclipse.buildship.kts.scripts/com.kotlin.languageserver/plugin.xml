<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="properties"
            file-names="gradle"
            id="com.kotlin.languageserver.content"
            name="KTS Language Server"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editorContentTypeBinding
            contentTypeId="com.kotlin.languageserver.content"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.lsp4e.languageServer">
      <server
            class="com.kotlin.languageserver.GradlePropertiesConnectionProvider"
            id="com.kotlin.languageserver.server"
            label="com.kotlin.languageserver.server">
      </server>
      <contentTypeMapping
            contentType="com.kotlin.languageserver.content"
            id="com.kotlin.languageserver.server">
      </contentTypeMapping>
   </extension>

</plugin>
